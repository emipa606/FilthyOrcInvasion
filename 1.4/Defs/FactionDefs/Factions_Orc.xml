<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>OrcTribe</defName>
    <label>The Orcish Clans</label>
    <description>A horde of orcs, who value only brutality.</description>
    <pawnsPlural>Orcs</pawnsPlural>
    <settlementGenerationWeight>0.55</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Warlock</leaderTitle>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <techLevel>Medieval</techLevel>
    <backstoryCategories>
      <li>OrcBackstory</li>
    </backstoryCategories>
    <allowedCultures>
      <li>Orchinal</li>
    </allowedCultures>
    <visitorTraderKinds>
      <li>Visitor_Orc_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Orc_Slaver</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-20</min>
      <max>60</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <!-- taken from the vanilla Tribal faction; I recommend averaging these values with those of Outlanders -->
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(800, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Alien_Orc>8</Alien_Orc>
          <OrcRaider>5</OrcRaider>
          <OrcGrunt>3</OrcGrunt>
          <OrcWarlord>1</OrcWarlord>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>60</commonality>
        <options>
          <Alien_Orc>5</Alien_Orc>
          <OrcRaider>8</OrcRaider>
          <OrcGrunt>3</OrcGrunt>
          <OrcWarlord>1</OrcWarlord>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>60</commonality>
        <options>
          <Alien_Orc>5</Alien_Orc>
          <OrcRaider>5</OrcRaider>
          <OrcGrunt>5</OrcGrunt>
          <OrcWarlord>2</OrcWarlord>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <OrcScrounger>1</OrcScrounger>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2.5</Alpaca>
          <Elephant>2</Elephant>
        </carriers>
        <guards>
          <Alien_Orc>20</Alien_Orc>
          <OrcRaider>20</OrcRaider>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Alien_Orc>20</Alien_Orc>
          <OrcRaider>20</OrcRaider>
          <OrcGrunt>10</OrcGrunt>
          <OrcWarlord>5</OrcWarlord>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Alien_Orc>20</Alien_Orc>
          <OrcRaider>20</OrcRaider>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>WorldIcon/OrcVillagelarge</settlementTexturePath>
    <factionIconPath>WorldIcon/OrcVillage</factionIconPath>
    <colorSpectrum>
      <li>(0.89, 0.19, 0.19)</li>
      <li>(0.70, 0.89, 0.27)</li>
    </colorSpectrum>
  </FactionDef>
</Defs>