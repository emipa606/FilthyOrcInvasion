<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_OrcChestPlate</defName>
    <label>large chest piece</label>
    <description>A large metal plate fastened to the chest. Crude but effective at shielding against blows.</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Pawn/Humanlike/Apparel/OrcChestPlate/OrcChestPlate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>2</Mass>
      <ArmorRating_Blunt>0.38</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.38</ArmorRating_Sharp>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Steel>110</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Pawn/Humanlike/Apparel/OrcChestPlate/OrcChestPlate</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>OrcCloths</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
