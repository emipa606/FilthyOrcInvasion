    </stuffCategories>
    <costStuffCount>85</costStuffCount>
    <costList>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.02</MoveSpeed>
      <MeleeDodgeChance>-0.02</MeleeDodgeChance>
