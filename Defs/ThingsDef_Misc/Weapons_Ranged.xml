  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>ThrowingAxe</defName>
    <label>throwing axe</label>
    <description>A steel headed axe balanced for throwing. Its weight allows for a hacking strike at range.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ThrowingAxe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costList>
      <WoodLog>25</WoodLog>
      <Steel>25</Steel>
    </costList>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>0.85</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.78</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>0.6</RangedWeapon_Cooldown>
