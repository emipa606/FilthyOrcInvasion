<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- base manufacturing -->
  <ThingDef Name="BaseCannon" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Medieval</techLevel>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
  </ThingDef>
  <ThingDef Name="BaseMakeableCannon" ParentName="BaseCannon" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  <ThingDef Name="BaseHumanCannon" ParentName="BaseCannon" Abstract="True">
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
  </ThingDef>
  <ThingDef Name="BaseHumanMakeableCannon" ParentName="BaseMakeableCannon" Abstract="True">
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
  </ThingDef>
  <!-- ==================Cannon================== -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Cannonball</defName>
    <label>cannon ball</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Cannonball</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>60</speed>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>20</damageAmountBase>
      <explosionRadius>3</explosionRadius>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseHumanMakeableCannon">
    <defName>Gun_HandCannon</defName>
    <label>hand cannon</label>
    <description>A cannon small enough to be wielded by a monstrous creature. Fires a powerful explosive shot, but its recoil leaves the user vulnerable.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Handcannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>GiantRanged</li>
    </weaponTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.15</MoveSpeed>
    </equippedStatOffsets>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0.4</generateCommonality>
    <statBases>
      <WorkToMake>22000</WorkToMake>
      <Mass>20</Mass>
      <AccuracyTouch>0.79</AccuracyTouch>
      <AccuracyShort>0.42</AccuracyShort>
      <AccuracyMedium>0.18</AccuracyMedium>
      <AccuracyLong>0.06</AccuracyLong>
      <RangedWeapon_Cooldown>12.0</RangedWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>45</equippedAngleOffset>
    <costList>
      <Steel>400</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Cannonball</defaultProjectile>
        <warmupTime>4.6</warmupTime>
        <range>40</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <burstShotCount>1</burstShotCount>
        <soundAiming>HissSmall</soundAiming>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>20</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>17</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- ==================Javelin================== -->
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Javelin_Thrown</defName>
    <label>javelin</label>
    <graphicData>
      <texPath>Things/Projectile/Javelin_Thrown</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>21</damageAmountBase>
      <speed>35</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Javelin</defName>
    <label>javelin</label>
    <description>light spears designed for throwing. Its weight allows for quick throwing, useful for skirmishing at close range.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Javelin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costList>
      <WoodLog>70</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>13000</WorkToMake>
      <Mass>2</Mass>
      <AccuracyTouch>0.92</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.56</AccuracyMedium>
      <AccuracyLong>0.36</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRanged</li>
      <li>NeolithicRangedHeavy</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Javelin_Thrown</defaultProjectile>
        <warmupTime>2.0</warmupTime>
        <range>18</range>
        <soundCast>Interact_BeatFire</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- ==================Throwing Axe================== -->
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>ThrowingAxe_Thrown</defName>
