        <warmupTime>1.0</warmupTime>
        <range>12</range>
        <soundCast>ThrowGrenade</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- ==================Sling================== -->
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Stone_Slung</defName>
    <label>slung stone</label>
    <graphicData>
      <texPath>Things/Projectile/Stone_Slung</texPath>
